                    </group>
                    <notebook colspan="4">
                    <page string="Internal Notes">
                        <field name="description"/>
                    </page>
                    <page string="Extra Info" invisible="1" >
                        <group>
                            <group string="Categorization" groups="base.group_multi_company,base.group_no_one" name="categorization">
